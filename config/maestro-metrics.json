{
  "username": "crisidev",
  "app": "metrics",
  "stages": [
    {
      "name": "prod",
      "components": [
        {
          "name": "prometheus",
          "dns": "prometheus",
          "frontend": true,
          "src": "hub.maestro.io:5000/crisidev/prometheus",
          "gitsrc": "https://github.com/crisidev/maestro-prometheus",
          "ports": [9090]
        },
        {
          "name": "grafana",
          "dns": "metrics",
          "frontend": true,
          "src": "hub.maestro.io:5000/crisidev/grafana",
          "gitsrc": "https://github.com/crisidev/maestro-grafana",
          "ports": [3001]
        },
        {
          "name": "container-exporter",
          "frontend": true,
          "global": true,
          "src": "prom/container-exporter",
          "ports": [9104],
          "docker_args": "-v /sys/fs/cgroup:/cgroup -v /var/run/docker.sock:/var/run/docker.sock"
        },
        {
          "name": "node-exporter",
          "global": true,
          "src": "prom/node-exporter",
          "docker_args": "--net=host"
        }
      ]
    }
  ]
}
